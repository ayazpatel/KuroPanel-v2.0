# Production Environment Variables for KuroPanel V2
# Copy this file to .env.production and configure your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
CI_ENVIRONMENT=production
APP_VERSION=2.0.0
APP_DEBUG=false
APP_BASEURL=https://panel.example.com
DOMAIN=panel.example.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=database
DB_NAME=kuropanel_prod
DB_USER=kuro_prod_user
DB_PASS=your_secure_db_password_here
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PASS=your_secure_redis_password_here

# =============================================================================
# TELEGRAM BOT INTEGRATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# EMAIL/SMTP CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your_smtp_password_here
SMTP_ENCRYPTION=tls

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_PATH=/path/to/ssl/certificates
SSL_CERT_FILE=fullchain.pem
SSL_KEY_FILE=privkey.pem

# =============================================================================
# DATA PERSISTENCE PATHS
# =============================================================================
DATA_PATH=/opt/kuropanel/data
BACKUP_PATH=/opt/kuropanel/backups
LOG_PATH=/opt/kuropanel/logs

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
GRAFANA_PASS=your_secure_grafana_password_here
ELASTIC_PASSWORD=your_secure_elastic_password_here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here_minimum_32_chars
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_chars
SESSION_SECRET=your_session_secret_here_minimum_32_chars

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=60
MYSQL_INNODB_BUFFER_POOL=2G
REDIS_MAXMEMORY=1G

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# =============================================================================
# LICENSE & PAYMENT INTEGRATION
# =============================================================================
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
FAIL2BAN_ENABLED=true
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# =============================================================================
# DOCKER DEPLOYMENT
# =============================================================================
COMPOSE_PROJECT_NAME=kuropanel_prod
COMPOSE_FILE=docker-compose.production.yml
