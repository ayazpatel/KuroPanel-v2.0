# Quick Production Environment Setup for KuroPanel V2
# Minimal configuration to get the container running

# Application Settings
CI_ENVIRONMENT=production
APP_VERSION=2.0.0
APP_DEBUG=false
APP_BASEURL=https://localhost
DOMAIN=localhost

# Database Configuration (Update with secure passwords)
DB_HOST=database
DB_NAME=kuropanel_prod
DB_USER=kuro_prod_user
DB_PASS=kuro_secure_password_123
MYSQL_ROOT_PASSWORD=root_secure_password_123

# Redis Configuration
REDIS_HOST=redis
REDIS_PASS=redis_secure_password_123

# Data Paths (using relative paths for now)
DATA_PATH=./data
BACKUP_PATH=./backups
SSL_PATH=./ssl

# Optional Services
GRAFANA_PASS=admin123

# Telegram (Optional - leave empty if not using)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email/SMTP (Optional - leave empty if not using)
SMTP_HOST=
SMTP_USER=
SMTP_PASS=

# Security Keys (Generate secure keys in production)
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_please
ENCRYPTION_KEY=your_encryption_key_minimum_32_characters_long_please
SESSION_SECRET=your_session_secret_minimum_32_characters_long_please
